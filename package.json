{
    "name": "fluffit",
    "version": "1.0.0",
    "description": "top bar like linux.",
    "author": "u9pi",
    "license": "MIT",
    "main": "./src/index.js",
    "scripts": {
        "start": "SET NODE_ENV=development&& electron .",
        "build": "npm run build:win32 && npm run build:win64",
        "build:win64": "electron-builder --win --x64",
        "build:win32": "electron-builder --win --ia32"
    },
    "build": {
        "productName": "fluffit",
        "appId": "u9pi.fluffit",
        "asar": true,
        "asarUnpack": [
            "**/*.node"
        ],
        "compression": "normal",
        "removePackageScripts": false,
        "win": {
            "icon": "./public/icons/app/icon.ico",
            "target": [
                "zip",
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": true
        },
        "files": [
            "dist/**/*",
            "node_modules/**/*",
            "public/**/*",
            "src/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "./public/",
            "output": "./dist/",
            "app": "."
        }
    },
    "dependencies": {
        "dotenv": "^16.0.1",
        "electron-store": "^8.0.1",
        "gsap": "^3.10.4",
        "luxon": "^2.4.0",
        "node-gyp": "^9.0.0",
        "win-audio": "^2.0.2"
    },
    "devDependencies": {
        "electron": "^18.2.3",
        "electron-builder": "^23.0.3"
    }
}
